{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "resources/**/*.vue",
        "resources/**/*.*",
        "vite.config.*"
    ],
    "compilerOptions": {
        "composite": true,
        "types": [
            "node"
        ],
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@assets/*": [
                "./resources/assets/*"
            ],
            "@helpers/*": [
                "./resources/js/helpers/*"
            ],
            "@components/*": [
                "./resources/js/components/*"
            ],
            "@ui/*": [
                "./resources/js/ui/*"
            ],
            "@user/*": [
                "./resources/js/user/*"
            ],
            "@admin/*": [
                "./resources/js/admin/*"
            ]
        }
    }
}
